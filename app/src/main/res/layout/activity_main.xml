<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계산기"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <RelativeLayout
        android:id="@+id/LoginBox"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:background="#D0D0D0"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID : "
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/editSigninID"
            android:layout_alignBaseline="@id/editSigninID"/>
        <TextView
            android:id="@+id/textPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW : "
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/editPW"
            android:layout_alignBaseline="@id/editPW"/>
        <EditText
            android:id="@+id/editSigninID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="ID를 입력하세요."
            android:textSize="20dp"
            android:layout_marginTop="22dp"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/editPW"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="PW를 입력하세요."
            android:textSize="20dp"
            android:inputType="textPassword"
            android:layout_below="@+id/editSigninID"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="20dp"
        android:layout_below="@id/LoginBox"
        android:layout_alignLeft="@id/LoginBox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="#C0D0F0"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20dp"
        android:layout_below="@id/LoginBox"
        android:layout_alignRight="@id/LoginBox"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="#C0D0F0"/>

</RelativeLayout>