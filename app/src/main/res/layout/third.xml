<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계산기"
        android:textSize="40dp"
        android:textColor="#000000"
        android:background="#cccccc"
        android:gravity="center"/>
    <TextView
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="40dp"/>
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text=""
        android:lines="1"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="50dp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5">
        <Button
            android:id="@+id/btnCal_Clear"
            android:layout_width="204dp"
            android:text="Clear"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/btnCal_Div"
            android:layout_width="102dp"
            android:text="/"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_7"
            android:layout_width="102dp"
            android:text="7"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_8"
            android:layout_width="102dp"
            android:text="8"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_9"
            android:layout_width="102dp"
            android:text="9"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_Mul"
            android:layout_width="102dp"
            android:text="X"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_4"
            android:layout_width="102dp"
            android:text="4"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_5"
            android:layout_width="102dp"
            android:text="5"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_6"
            android:layout_width="102dp"
            android:text="6"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_Sub"
            android:layout_width="102dp"
            android:text="-"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_1"
            android:layout_width="102dp"
            android:text="1"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_2"
            android:layout_width="102dp"
            android:text="2"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_3"
            android:layout_width="102dp"
            android:text="3"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_Add"
            android:layout_width="102dp"
            android:text="+"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_0"
            android:layout_width="204dp"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnCal_Equ"
            android:layout_width="204dp"
            android:text="="
            android:layout_columnSpan="2"
            android:textSize="30dp"/>
    </GridLayout>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:background="#C0D0F0"/>


</LinearLayout>
